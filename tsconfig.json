{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs",
    "lib": ["ES6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
      ],
      "baseUrl": ".",
      "paths": {
      "@controllers/*":["./src/controllers/*"],
      "@models/*":["./src/models/*"],
      "@views/*":["./src/views/*"],
      "@config/*":["./src/config/*"]
    },
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
